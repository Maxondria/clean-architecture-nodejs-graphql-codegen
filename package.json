{
  "name": "graphql-codegen-ddd-apollo",
  "version": "1.0.0",
  "main": "index.js",
  "author": "suzukalight <mail@mkubara.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "src/*"
    ],
    "nohoist": [
      "**/react-scripts",
      "**/react-scripts/**",
      "**/@zeit/**",
      "**/@generated",
      "**/@generated/**"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "jest": "^26.2.2",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "prettier": "prettier --config .prettierrc -l --write \"./src/**/*.{js,ts}\"",
    "lint": "eslint --fix ./src",
    "test": "yarn test:domain",
    "test:domain": "yarn workspace domain-model test",
    "codegen": "yarn codegen:schema",
    "codegen:schema": "yarn workspace schema codegen"
  }
}
